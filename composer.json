{
    "name": "infinity-next/infinity-next",
    "description": "Infinity Next is an imageboard suite utilizing the Laravel framework.",
    "keywords": ["laravel", "imageboard", "4chan", "16chan", "infinity"],
    "license": "AGPL 3.0",
    "type": "project",

    "authors": [
        {
            "name": "Joshua Moon",
            "email": "josh@jaw.sh",
            "homepage": "http://jaw.sh",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
        "predis/predis": "~1.0",
        "doctrine/dbal": "~2.3",

        "stripe/stripe-php": "2.*",
        "laravel/cashier": "~5.0",
        "laravelcollective/html": "~5.0",
        "sabberworm/PHP-CSS-Parser": "7.0.*",

        "ext-gd": "*",
        "intervention/imagecache": "~2.3",
        "intervention/image": "~2.3",
        "cviebrock/image-validator" : "2.0.*@beta",
        "jenssegers/imagehash" : "0.2.*",

        "james-heinrich/getid3" : "1.9.*",

        "geoip2/geoip2" : "~2.0",

        "infinity-next/braintree":       "*@dev",
        "infinity-next/laravel-captcha": "*@dev",
        "infinity-next/eightdown":       "*@dev",
        "infinity-next/sleuth":          "*@dev"
    },

    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*",
        "phpspec/phpspec": "~2.1",
        "barryvdh/laravel-debugbar": "2.*"
    },

    "autoload": {
        "classmap": [
            "database"
        ],

        "psr-4": {
            "App\\": "app/"
        }
    },

    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },

    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },

    "config": {
        "preferred-install": "dist"
    }
}
